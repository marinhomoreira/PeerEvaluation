body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  font-size 13px
  text-align left
  text-stroke 1px rgba(255, 255, 255, 0.1)
  color #555
a
  color: #00B7FF
h1, h2
  margin 0
  font-size 22px
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 60px  
  

/* NEW EVALUATION FORM */
.newEvaluation
    border 2px
    border-color #000
    border-style solid
    width 600px
    margin-left auto
    margin-right auto
    padding 14px
  input[type =text]
    width 300px
    margin-left 16px
    float left
  input[type =button], input[type =submit]
    clear both
    text-align left
    margin-left 165px
    display block
  select
    margin-left 16px
    margin-right 350px
    float left
  textarea
    margin-left 16px
    width 400px
    height 200px
    float left
    display block
  h2
    padding-bottom 20px
    clear both
  h3, h4
    padding-top 30px
    text-align center
    clear both
  .label
      width 150px
      text-align right !important
      display block
      float left

/* EVALUATIONS */
#evaluations
  text-align left
  margin-left auto
  margin-right auto
  width 320px
  .evaluation
    margin 20px
    .created_at
        display none
    .title
        font-weight bold
        background-color #eee
    .name
        background-color #ffa